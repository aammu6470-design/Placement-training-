#include <stdio.h>

int main() {
    int a, b = 0, c;

    printf("Enter a number: ");
    scanf("%d", &a);

    c = a;  // store the original number

    while (a > 0) {
        b = b * 10 + a % 10;  // reverse the number
        a = a / 10;
    }

    if (c == b)
        printf("Palindrome number\n");
    else
        printf("Not a palindrome number\n");

    return 0;
}
